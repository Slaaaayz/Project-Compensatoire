{% extends 'base.html.twig' %}

{% block title %}Matchs - Ynov Basket{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-white">
                <i class="fas fa-gamepad me-2"></i>
                Matchs NBA
            </h1>
            <div class="stats-card">
                <i class="fas fa-chart-bar me-2"></i>
                {% if meta and meta.total_count %}
                    {{ games|length }} matchs affichés
                    {% if meta.total_count > games|length %}
                        <br><small class="text-muted">Total estimé: {{ meta.total_count }}+</small>
                    {% endif %}
                {% else %}
                    {{ games|length }} matchs
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% if games is empty %}
    <div class="row">
        <div class="col-12">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">Aucun match trouvé</h3>
                    {% if error is defined and error %}
                        <p class="text-muted">{{ error }}</p>
                    {% else %}
                        <p class="text-muted">Impossible de récupérer les données des matchs pour le moment.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        {% for game in games %}
            <div class="col">
                <div class="card game-card h-100" onclick="window.location.href='{{ path('app_game_show', {'id': game.id}) }}'">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ game.home_team.abbreviation ?? game.home_team.name }} VS {{ game.visitor_team.abbreviation ?? game.visitor_team.name }}</h5>
                        <p class="card-text">
                            {% if game.date %}
                                {{ game.date|date('d/m/Y') }}
                            {% else %}
                                Date non disponible
                            {% endif %}
                        </p>
                        {% if game.home_team_score is defined or game.visitor_team_score is defined %}
                            <p class="card-text">
                                <strong>{{ game.home_team_score ?? 'N/A' }} - {{ game.visitor_team_score ?? 'N/A' }}</strong>
                            </p>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {% if meta and (meta.next_cursor is defined or meta.total_count > games|length) %}
        <nav aria-label="Navigation des matchs">
            <ul class="pagination justify-content-center">
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_games', {'page': currentPage - 1}) }}">
                            <i class="fas fa-chevron-left"></i> Précédent
                        </a>
                    </li>
                {% endif %}

                <li class="page-item active">
                    <span class="page-link">Page {{ currentPage }}</span>
                </li>

                {% if meta.next_cursor is defined or meta.total_count > games|length %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_games', {'page': currentPage + 1}) }}">
                            Suivant <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endif %}
{% endblock %}

