{% extends 'base.html.twig' %}

{% block title %}
    {% if team.data is defined %}
        {{ team.data.full_name ?? team.data.name }} - Ynov Basket
    {% else %}
        {{ team.full_name ?? team.name }} - Ynov Basket
    {% endif %}
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('app_teams') }}" class="text-decoration-none">
                        <i class="fas fa-arrow-left me-1"></i>Retour aux équipes
                    </a>
                </li>
            </ol>
        </nav>
    </div>
</div>

{% set teamData = team.data is defined ? team.data : team %}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <i class="fas fa-shield-alt fa-8x text-primary mb-3"></i>
                        <h2 class="card-title">{{ teamData.full_name ?? teamData.name }}</h2>
                        {% if teamData.abbreviation %}
                            <span class="badge bg-secondary fs-6">{{ teamData.abbreviation }}</span>
                        {% endif %}
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            {% if teamData.city %}
                                <div class="col-sm-6 mb-3">
                                    <div class="stats-card">
                                        <h6><i class="fas fa-map-marker-alt me-2"></i>Ville</h6>
                                        <p class="mb-0">{{ teamData.city }}</p>
                                    </div>
                                </div>
                            {% endif %}
                            
                            {% if teamData.conference %}
                                <div class="col-sm-6 mb-3">
                                    <div class="stats-card">
                                        <h6><i class="fas fa-trophy me-2"></i>Conférence</h6>
                                        <p class="mb-0">{{ teamData.conference }}</p>
                                    </div>
                                </div>
                            {% endif %}
                            
                            {% if teamData.division %}
                                <div class="col-sm-6 mb-3">
                                    <div class="stats-card">
                                        <h6><i class="fas fa-layer-group me-2"></i>Division</h6>
                                        <p class="mb-0">{{ teamData.division }}</p>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% if players|length > 0 %}
    <div class="row mt-4">
        <div class="col-12">
            <h3 class="text-white mb-4">
                <i class="fas fa-users me-2"></i>
                Joueurs de l'équipe ({{ players|length }})
            </h3>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
                {% for player in players %}
                    <div class="col">
                        <div class="card player-card h-100" onclick="window.location.href='{{ path('app_player_show', {'id': player.id}) }}'">
                            <div class="card-body">
                                <div class="text-center">
                                    <i class="fas fa-user-circle fa-4x text-primary mb-3"></i>
                                    <h5 class="card-title">{{ player.first_name }} {{ player.last_name }}</h5>
                                    {% if player.position %}
                                        <span class="badge bg-secondary">{{ player.position }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% else %}
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-info-circle fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Aucun joueur trouvé</h5>
                    <p class="card-text">Aucun joueur n'est actuellement associé à cette équipe.</p>
                </div>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}

