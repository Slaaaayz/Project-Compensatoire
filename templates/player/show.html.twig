{% extends 'base.html.twig' %}

{% block title %}
    {% if player.data is defined %}
        {{ player.data.first_name }} {{ player.data.last_name }} - Ynov Basket
    {% else %}
        {{ player.first_name }} {{ player.last_name }} - Ynov Basket
    {% endif %}
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('app_players') }}" class="text-decoration-none">
                        <i class="fas fa-arrow-left me-1"></i>Retour aux joueurs
                    </a>
                </li>
            </ol>
        </nav>
    </div>
</div>

{% set playerData = player.data is defined ? player.data : player %}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <i class="fas fa-user-circle fa-8x text-primary mb-3"></i>
                        <h2 class="card-title">{{ playerData.first_name }} {{ playerData.last_name }}</h2>
                        {% if playerData.position %}
                            <span class="badge bg-secondary fs-6">{{ playerData.position }}</span>
                        {% endif %}
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            {% if playerData.height %}
                                <div class="col-sm-6 mb-3">
                                    <div class="stats-card">
                                        <h6><i class="fas fa-ruler-vertical me-2"></i>Taille</h6>
                                        <p class="mb-0">{{ playerData.height }}</p>
                                    </div>
                                </div>
                            {% endif %}
                            
                            {% if playerData.weight %}
                                <div class="col-sm-6 mb-3">
                                    <div class="stats-card">
                                        <h6><i class="fas fa-weight me-2"></i>Poids</h6>
                                        <p class="mb-0">{{ playerData.weight }}</p>
                                    </div>
                                </div>
                            {% endif %}
                            
                            {% if playerData.jersey_number %}
                                <div class="col-sm-6 mb-3">
                                    <div class="stats-card">
                                        <h6><i class="fas fa-hashtag me-2"></i>Numéro</h6>
                                        <p class="mb-0">{{ playerData.jersey_number }}</p>
                                    </div>
                                </div>
                            {% endif %}
                            
                            {% if playerData.college %}
                                <div class="col-sm-6 mb-3">
                                    <div class="stats-card">
                                        <h6><i class="fas fa-graduation-cap me-2"></i>Université</h6>
                                        <p class="mb-0">{{ playerData.college }}</p>
                                    </div>
                                </div>
                            {% endif %}
                            
                            {% if playerData.country %}
                                <div class="col-sm-6 mb-3">
                                    <div class="stats-card">
                                        <h6><i class="fas fa-flag me-2"></i>Pays</h6>
                                        <p class="mb-0">{{ playerData.country }}</p>
                                    </div>
                                </div>
                            {% endif %}
                            
                            {% if playerData.draft_year %}
                                <div class="col-sm-6 mb-3">
                                    <div class="stats-card">
                                        <h6><i class="fas fa-calendar me-2"></i>Année de draft</h6>
                                        <p class="mb-0">{{ playerData.draft_year }}</p>
                                    </div>
                                </div>
                            {% endif %}
                            
                            {% if playerData.team %}
                                <div class="col-12 mb-3">
                                    <div class="stats-card">
                                        <h6><i class="fas fa-shield-alt me-2"></i>Équipe</h6>
                                        <div class="d-flex align-items-center">
                                            <span class="me-3">{{ playerData.team.full_name }}</span>
                                            <a href="{{ path('app_team_show', {'id': playerData.team.id}) }}" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-external-link-alt me-1"></i>Voir l'équipe
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

