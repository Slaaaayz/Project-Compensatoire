{% extends 'base.html.twig' %}

{% block title %}Joueurs - Ynov Basket{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-white">
                <i class="fas fa-users me-2"></i>
                Joueurs NBA
            </h1>
            <div class="stats-card">
                <i class="fas fa-chart-bar me-2"></i>
                {% if meta and meta.total_count %}
                    {{ players|length }} joueurs affichés
                    {% if meta.total_count > players|length %}
                        <br><small class="text-muted">Total estimé: {{ meta.total_count }}+</small>
                    {% endif %}
                {% else %}
                    {{ players|length }} joueurs
                {% endif %}
            </div>
        </div>
        
        <!-- Message informatif sur l'API -->
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Note :</strong> L'API a une limite de 4 requêtes par minute. Si vous rencontrez des erreurs, attendez quelques instants avant de réessayer.
        </div>
    </div>
</div>

{% if players is empty %}
    <div class="row">
        <div class="col-12">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">Aucun joueur trouvé</h3>
                    {% if error is defined and error %}
                        <p class="text-muted">{{ error }}</p>
                    {% else %}
                        <p class="text-muted">Impossible de récupérer les données des joueurs pour le moment.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        {% for player in players %}
            <div class="col">
                <div class="card player-card h-100" onclick="window.location.href='{{ path('app_player_show', {'id': player.id}) }}'">
                    <div class="card-body">
                        <div class="text-center">
                            <i class="fas fa-user-circle fa-4x text-primary mb-3"></i>
                            <h5 class="card-title">{{ player.first_name }} {{ player.last_name }}</h5>
                            {% if player.team %}
                                <p class="card-text text-muted">
                                    <i class="fas fa-shield-alt me-1"></i>
                                    {{ player.team.name }}
                                </p>
                            {% endif %}
                            {% if player.position %}
                                <span class="badge bg-secondary">{{ player.position }}</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {% if meta and (meta.next_cursor is defined or meta.total_count > players|length) %}
        <nav aria-label="Navigation des joueurs">
            <ul class="pagination justify-content-center">
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_players', {'page': currentPage - 1}) }}">
                            <i class="fas fa-chevron-left"></i> Précédent
                        </a>
                    </li>
                {% endif %}

                <li class="page-item active">
                    <span class="page-link">Page {{ currentPage }}</span>
                </li>

                {% if meta.next_cursor is defined or meta.total_count > players|length %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_players', {'page': currentPage + 1}) }}">
                            Suivant <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endif %}
{% endblock %}

